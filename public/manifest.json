{
  "manifest_version": 3,
  "name": "RevCoding",
  "short_name": "RevCoding",
  "version": "0.1.0",
  "version_name": "0.1.0-alpha",
  "description": "Save, tag, search, and review coding problems from LeetCode. Add notes, filter, and track your progress.",
  "action": {
    "default_title": "RevCoding Dashboard",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png",
    "512": "icons/icon.png"
  },
  "author": "Ankit Kumar Gupta",
  "homepage_url": "https://github.com/ankitkumargupta001/chrome-extension-revcoding",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://leetcode.com/*", "https://leetcode.cn/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*", "https://leetcode.cn/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "offline_enabled": false
}
